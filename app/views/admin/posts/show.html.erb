<ul class="breadcrumb">
  <li><%= link_to "Dashboard", admin_root_path %> <span class="divider">/</span></li>
  <li><%= link_to "Posts", admin_posts_path %> <span class="divider">/</span></li>
  <li class="active"><%= @post.title %></li>
</ul>

<table class="table table-striped">
  <tr>
    <td>Titulo</td>
    <td><%= @post.title %></td>
  </tr>
    <tr>
    <td>Image</td>
    <td><%= image_tag @post.cover(:thumb) %></td>
  </tr>
    <tr>
    <td>Published</td>
    <td><%= @post.published %></td>
  </tr>
    <tr>
    <td>Body</td>
    <td><%= sanitize(@post.body) %></td>
  </tr>
  <tr>
    <td>Tags</td>
    <td><%= @post.tags.map(&:name).join(' - ') %></td>
  </tr>
</table>
<h4>Comments</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Coment√°rio</th>
      <th>Approved</th>
      <th>Created at</th>
    </tr>
  </thead>
  <tbody>
  <% @post.comments.each do |comment| %>
    <tr>
      <td><%= comment.name %></td>
      <td><%= comment.body %></td>
      <td><%= comment.approved %></td>
      <td><%= comment.created_at %></td>
    </tr>
  <% end %>
</table>

<div class="well actions">
  <%= link_to 'Nova Postagem', new_admin_post_path, class: 'btn btn-success' %>
  <%= link_to 'Editar Postagem', edit_admin_post_path(@post), class: 'btn btn-warning' %>
  <%= link_to 'Voltar', admin_posts_path, class: 'btn' %>
</div> 
