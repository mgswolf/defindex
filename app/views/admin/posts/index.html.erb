<ul class="breadcrumb">
  <li><%= link_to "Dashboard", admin_root_path %> <span class="divider">/</span></li>
  <li class="active">Posts</li>
</ul>
<table class="table table-striped">
<thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Published</th>
      <th>Created at</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.published %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'visualizar', [:admin,post] %></td>
        <td><%= link_to 'editar', [:edit,:admin,  post] %></td>
        <td><%= link_to 'excluir', [:admin,post], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts, :theme => 'twitter-bootstrap' %>
<div class="well actions">
  <%= link_to 'Nova Postagem', new_admin_post_path, class: 'btn btn-success' %>
</div>
